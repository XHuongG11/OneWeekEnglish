<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home">

    <!-- ─────── Lời chào ───────────────────────────── -->
    <TextView
        android:id="@+id/helloText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Little"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OLIVER"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/helloText"
        app:layout_constraintTop_toBottomOf="@id/helloText"/>

    <!-- ─────── Hộp bài học ────────────────────────── -->
    <LinearLayout
        android:id="@+id/lessonBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_lesson_box"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/lessonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bài 2: Activity"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/startButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_start_button"/>
    </LinearLayout>

    <!-- ─────── Thanh tiến trình ───────────────────── -->
    <View
        android:id="@+id/progressBar"
        android:layout_width="8dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- ─────── Nhân vật minh hoạ ──────────────────── -->
    <ImageView
        android:id="@+id/animal1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_monkey"
        android:layout_marginStart="180dp"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/animal2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_pig"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="@id/animal1"
        app:layout_constraintTop_toBottomOf="@id/animal1"/>

    <!-- ─────── Bottom Bar (nền kem + ba nút) ─────── -->
    <!-- Nền kem bo góc -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bgBar"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFF6BF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Nút Home lớn nổi lên giữa -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnHome"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginTop="-38dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#F23F55"
    app:layout_constraintTop_toTopOf="@id/bgBar"
    app:layout_constraintStart_toStartOf="@id/bgBar"
    app:layout_constraintEnd_toEndOf="@id/bgBar">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_home"
        android:layout_gravity="center"/>
</com.google.android.material.card.MaterialCardView>

    <!-- Label Home -->
    <TextView
        android:id="@+id/txtHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/baloo"
        android:text="Home"
        android:textColor="#F23F55"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/btnHome"
        app:layout_constraintStart_toStartOf="@id/btnHome"
        app:layout_constraintTop_toBottomOf="@id/btnHome" /> <!-- Thêm margin để tránh đè lên btnHome -->

    <!-- Nút trái -->
<com.google.android.material.card.MaterialCardView
android:id="@+id/btnLeft"
android:layout_width="72dp"
android:layout_height="72dp"
android:layout_marginStart="16dp"
android:layout_marginBottom="8dp"
app:cardCornerRadius="16dp"
app:cardElevation="2dp"
app:cardBackgroundColor="#F56178"
app:layout_constraintBottom_toBottomOf="@id/bgBar"
app:layout_constraintStart_toStartOf="@id/bgBar">

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_puzzle"
    android:layout_gravity="center"/>
</com.google.android.material.card.MaterialCardView>

<com.google.android.material.card.MaterialCardView
android:id="@+id/btnRight"
android:layout_width="72dp"
android:layout_height="72dp"
android:layout_marginEnd="16dp"
android:layout_marginBottom="8dp"
app:cardCornerRadius="16dp"
app:cardElevation="2dp"
app:cardBackgroundColor="#F56178"
app:layout_constraintBottom_toBottomOf="@id/bgBar"
app:layout_constraintEnd_toEndOf="@id/bgBar">

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_bear"
    android:layout_gravity="center"/>
</com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>